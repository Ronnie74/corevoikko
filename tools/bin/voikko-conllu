import sys
from libvoikko import Voikko
from conllu import parse

class Difference:
    def __init__(self, attr_name, left, right):
        self.attr_name = attr_name
        self.left = left
        self.right = right

    def __repr__(self):
        return "Attr: {}, {} <-> {}".format(self.attr_name, self.left, self.right)

def get_differences(left, right):
    diffs = []
    #TODO
    return diffs

def to_conllu(voikko_analysis):
    return voikko_analysis

if "--help" in sys.argv:
    print("Usage:")
    print(sys.argv[0], "TODO")
    sys.exit(0)

language = "fi"

voikko = Voikko(language)

for tokens in parse(sys.stdin.read()):
    for token in tokens:
        if "form" not in token:
            continue
        word_form = token["form"]
        analysis_list = voikko.analyze(word_form)
        if len(analysis_list) != 1:
            continue
        print(word_form)
        left = token
        right = to_conllu(analysis_list[0])
        diffs = get_differences(left, right)
        print(diffs)

voikko.terminate()
