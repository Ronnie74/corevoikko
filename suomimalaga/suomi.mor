end_rule loppu ($tietue):
  define $i := length ($tietue);
  ? loppu in $tietue.$i.jatko;

#foreach $k in $tietue:
#  define $n := transmit (<"loppu "> + <$k.luokka> + <$k.alku> + <$i.alku>);
#end;
#define $b := transmit ($tietue.<1,tiedot>);
#define $a := transmit ($tietue);

