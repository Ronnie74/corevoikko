  #
  if (($n greater 2) and
      ($tietue.($n-1).perusmuoto = "isä") and
      ($tietue.$n.luokka = sijapääte) and
      ($tietue.$n.luku = monikko) and
      ($tietue.$n.sija /= nimentö_t)) then
