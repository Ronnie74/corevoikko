import sys
import locale
import codecs
import xml.parsers.expat

wordlist = {}
current_element = None
current_word = None

def start_element(name, attrs):
	global current_element
	current_element = name
def end_element(name):
	global current_element
	global current_word
	if name == 'st':
		current_element = None
		current_word = None
def char_data(data):
	global current_element
	global current_word
	global wordlist
	if current_element == 's': current_word = data
	elif current_element == 'tn':
		if not wordlist.has_key(current_word): wordlist[current_word] = []
		wordlist[current_word].append(data)

# Start of main program

# Set defaults
ENCODING = locale.getpreferredencoding()
KOTUS_FILE = u'kotus-sanalista_v1.xml'

kotusfile = codecs.open(KOTUS_FILE, 'r', ENCODING)
kotusdata = kotusfile.read()
kotusfile.close()

parser = xml.parsers.expat.ParserCreate()
parser.StartElementHandler = start_element
parser.EndElementHandler = end_element
parser.CharacterDataHandler = char_data

parser.Parse(kotusdata.encode('UTF-8'))

for (word, infl) in wordlist.iteritems():
	print word, '  ', infl
